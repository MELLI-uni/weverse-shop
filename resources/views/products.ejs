<section class="product container mx-auto py-8">
    <h1 class="text-2xl font-bold mb-8">Products</h1>
    <div class="grid grid-cols-4 gap-x-12 gap-y-16">
        <% product.forEach(function(product) { %>
        <a class="product" href="/products/<%= product._id %>">
        <div class="w-64">
            <img class="h-40 mb-4 mx-auto" src="/img/<%= product.image %>" alt="">
            <div class="text-center">
                <h2 class="font-bold text-lg"><%= product.name %></h2>
                <div class="flex items-center justify-around mt-1">
                    <span class="text-lg">$<%= product.price %></span>
                    <!-- <button data-product="<%= JSON.stringify(product) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button> -->
                </div>
            </div>
        </div>
        </a>
        <% }) %>
    </div>
</section>