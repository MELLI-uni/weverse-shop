<section class="announcement container mx-auto py-8 relative">
    <h1 class="text-2xl font-bold mb-8">Announcements</h1>
    <table class="w-full table-auto bg-white">
        <thead>
            <tr>
                <th class="px-4 py-2 text-center">NO.</th>
                <th class="px-4 py-2 text-left">Title</th>
                <th class="px-4 py-2 text-left">Date</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i = 0; i < count; i++) { %>
                <tr>
                    <td class="px-4 py-2 text-center"><%= (count)-i %></td>
                    <td class="px-4 py-2 text-left"><a class="announce" href="/announcements/<%= announcements[i]._id %>"><%= announcements[i].title %></a></td>
                    <td class="px-4 py-2 text-left"><%= moment(announcements[i].createdAt).format("MM.DD.YYYY") %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <div class="py-4">
        <% if(user) { %>
            <% if(user.role === 'admin') { %>
                <button class="btn-primary rounded-full text-white font-bold py-2 px-4 absolute right-16">
                    <a href="/addannouncement"><span>Write</span></a>
                </button>
            <% } %>
        <% } %>
    </div>
</section>